[
  {
    "id": "allow-everything",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "<.*>",
      "methods": [
        "GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "anonymous"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-User": "{{ print .Subject }}"
          }
        }
      }
    ]
  }
]
