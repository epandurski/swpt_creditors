[
  {
    "id": "options",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<.*>",
      "methods": [
        "OPTIONS"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },

  {
    "id": "docs",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<\\.docs(/.*)?$>",
      "methods": [
        "GET", "HEAD"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "noop"
      }
    ]
  },

  {
    "id": "access.lookup",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<.*[/-](lookup)$>",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": ["access.readonly"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },

  {
    "id": "access.get",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<(?!\\.docs(/.*)?$).*>",
      "methods": [
        "GET", "HEAD"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": ["access.readonly"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },

  {
    "id": "access.modify",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<(?!.*[/-](lookup|reserve|activate|deactivate)$).*>",
      "methods": [
        "POST", "PUT", "PATCH", "DELETE"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": ["access"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },

  {
    "id": "activate",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<.*[/-](reserve|activate)$>",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": ["activate"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  },

  {
    "id": "deactivate",
    "version": "v0.36.0-beta.4",
    "upstream": {
      "url": "http://resource-server:8080",
      "preserve_host": true
    },
    "match": {
      "url": "${API_ROOT}creditors/<.*[/-](deactivate)$>",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": ["deactivate"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header"
      }
    ]
  }

]
